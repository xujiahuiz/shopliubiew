<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.LiuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ed_txt"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="8"
            android:background="@drawable/myshape" />

        <Button
            android:id="@+id/bt_txt"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:text="搜索" />
    </LinearLayout>


    <dongdong.bwie.com.jinjiezhoukao3.view.LiuView
        android:id="@+id/liuview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></dongdong.bwie.com.jinjiezhoukao3.view.LiuView>

</LinearLayout>