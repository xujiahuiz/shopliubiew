<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <ImageView
            android:id="@+id/iv_select"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ck_yes" />

        <ImageView
            android:id="@+id/iv_shop_iamge"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_margin="7dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iv_select" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/iv_shop_iamge"
            android:orientation="vertical">

            <TextView
                android:id="@+id/iv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:maxEms="15"
                android:text="我是标题"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/iv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="我是价格"
                android:textColor="#FD2F3B"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="30dp"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/iv_minus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="#FD2F3B"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/iv_num"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:hint="0"
                    android:textSize="15dp"


                    />

                <TextView
                    android:id="@+id/iv_push"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="#FD2F3B"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
